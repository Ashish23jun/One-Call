{
    "extends": "../typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}